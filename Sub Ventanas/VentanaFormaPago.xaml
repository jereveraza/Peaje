                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel.Effect>
                                <DropShadowEffect/>
                            </StackPanel.Effect>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="5 5 5 5">
                            <Button x:Name="VUELTO" Height="66" Width="90" TextElement.FontSize="20" Background="Pink" FontWeight="Bold" Click="VUELTO_Click">
                                VUELTO
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
