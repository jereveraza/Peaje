                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel.Effect>
                                <DropShadowEffect/>
                            </StackPanel.Effect>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="3" Margin="5 5 5 5" Grid.ColumnSpan="2">
