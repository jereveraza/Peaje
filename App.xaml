        <!--#endregion-->

        <!--#region Border Styles-->
        <Style TargetType="Border" x:Key="BorderStyle">
            <Setter Property="Background" Value="{DynamicResource BlockColor}" /> 
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BlockColor}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGridRow" x:Key="RowDeudaStyle">
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8 0 0 0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DeudaSeleccionada}" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontFamily" Value="Arial" />
                    <Setter Property="Background" Value="DarkGreen"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="18"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CellDeudaStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="4 0 4 0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Border" x:Key="BorderStyleHighlighted">
            <Setter Property="Background" Value="{DynamicResource BlockColor}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource HighlightColor}" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Border" x:Key="BorderImageStyle">
            <Setter Property="Background" Value="{DynamicResource BorderImageColor}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="Image">
                    <Setter Property="Stretch" Value="None" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </Style.Resources>
        </Style>
        <Style x:Key="BorderBackground"  TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BorderIconStyle" TargetType="{x:Type Border}">
            <Setter Property="Height" Value="57" />
            <Setter Property="Width" Value="57" />
            <Setter Property="Margin" Value="7,7,7,4" />
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <Style x:Key="BorderIconStyleHighlighted" TargetType="{x:Type Border}">
            <Setter Property="Height" Value="57" />
            <Setter Property="Width" Value="57" />
            <Setter Property="Margin" Value="7,7,7,4" />
            <Setter Property="Background" Value="{StaticResource HighlightColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style x:Key="BorderIconStyleError" TargetType="{x:Type Border}">
            <Setter Property="Height" Value="57" />
            <Setter Property="Width" Value="57" />
            <Setter Property="Margin" Value="7,7,7,4" />
            <Setter Property="Background" Value="{StaticResource ErrorColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <Style x:Key="BorderIconStyleWarning" TargetType="{x:Type Border}">
            <Setter Property="Height" Value="57" />
            <Setter Property="Width" Value="57" />
            <Setter Property="Margin" Value="7,7,7,4" />
            <Setter Property="Background" Value="{StaticResource WarningColor}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>
        <!--#endregion-->

        <!--#region TextBox Styles-->
        <Style TargetType="TextBox" x:Key="TextBoxStyle">
            
            <Setter Property="Height" Value="33"/>
            <Setter Property="BorderBrush" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Focusable" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="AcceptsTab" Value="False" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12 0 0 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBox" x:Key="TextBoxStyleHighlighted">
            <Setter Property="Height" Value="33"/>
            <Setter Property="BorderBrush" Value="{StaticResource HighlightColor}" />
            <Setter Property="Background" Value="{StaticResource HighlightBackgroundColorTranslucent}" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Focusable" Value="True" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="AcceptsTab" Value="False" />
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12 0 0 0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" CornerRadius="4" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxLiquidacionStyle">
