        </Style>
        <Style TargetType="ListBox" x:Key="BoxMsgSupStyle">
            <Setter Property="BorderThickness" Value="0"/>
            <!--Horizontal-->
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontFamily" Value="Arial" />

            <!--Row-->
            <Setter Property="Foreground" Value="{StaticResource ValueFontColor}" />
            <Style.Triggers>
                <!--"{StaticResource DataGridSelectedColor}"-->
                <Trigger Property="ListBox.IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource ValueFontColor}"/>
                    <Setter Property="Foreground" Value="{StaticResource ValueFontColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="DataTemplateStyle">
            <Grid Margin="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" ></ColumnDefinition>
                    <ColumnDefinition Width="225"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border BorderThickness="0 0 1 0" Height="24" BorderBrush="{StaticResource DataGridLineColor}" />
                <TextBlock Padding="4 0 0 0" VerticalAlignment="Center" Foreground="{StaticResource LabelFontColor}" Text="{Binding Path=Index, StringFormat=D2}"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Padding="8 0 0 0" FontSize="16" Foreground="White" Text="{Binding Path=Value}"/>
            </Grid>
        </DataTemplate>
        <Style TargetType="ListBoxItem" x:Key="ListBoxItemStyle">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="Border" Padding="2" SnapsToDevicePixels="true">
                            <ContentPresenter Margin="5 0 0 0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontFamily" Value="Arial" />
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Storyboard x:Key="flashAnimation" Duration="0:0:11" >
            <DoubleAnimation Storyboard.TargetProperty="(Border.Opacity)" From="1" To="0" AutoReverse="True" Duration="0:0:0.5" RepeatBehavior="Forever" />
        </Storyboard>
        <Storyboard x:Key="boldTextBlock" Duration="0:0:10">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.FontWeight)">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <FontWeight>Bold</FontWeight>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:9.99">
                    <DiscreteObjectKeyFrame.Value>
                        <FontWeight>Normal</FontWeight>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Style x:Key="BorderFlashingStyle" TargetType="{x:Type Border}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding FlashMessage}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource flashAnimation}" />
                    </DataTrigger.EnterActions>
                </DataTrigger>

            </Style.Triggers>
        </Style>
        
        <Style TargetType="ListBoxItem" x:Key="ListBoxMsgSupStyle">            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border x:Name="imagen" Background="{Binding Imagen}" Style="{StaticResource BorderFlashingStyle}" />
                            <TextBlock x:Name="texto" Text="{Binding Mensaje}" Margin="5 0 0 0" Grid.Column="1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding FlashMessage}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource boldTextBlock}" />
                    </DataTrigger.EnterActions>
                </DataTrigger>

            </Style.Triggers>
        </Style>

        <Style x:Key="ListBoxTextStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="17" />
        </Style>
