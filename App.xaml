        <!--#region Button Styles-->
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="{StaticResource BackgroundColor}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="PART_Content"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource HighlightColor}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource HighlightColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <SolidColorBrush x:Key="CashButtonHighlightColor" Color="#28b463 "/>
        
        <Style TargetType="Button" x:Key="ActionButtonCashStyle">
            <Setter Property="Background" Value="{StaticResource CashButtonHighlightColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="{StaticResource CashButtonHighlightColor}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="PART_Content"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource CashButtonHighlightColor}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource CashButtonHighlightColor}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Storyboard x:Key="ChangeButtonBackground" AutoReverse="False" Duration="0:0:0.4">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{StaticResource HighlightColor}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.BorderBrush)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{StaticResource HighlightColor}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{StaticResource BackgroundColor}"/>
            </ObjectAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.BorderBrush)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{StaticResource BackgroundColor}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        
        <Style TargetType="Button" x:Key="ActionButtonStyleHighlighted">
            <Setter Property="Background" Value="{StaticResource HighlightColor}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="17" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="{StaticResource HighlightColor}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="PART_Content"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          TextElement.Foreground="{TemplateBinding Foreground}"></ContentPresenter>
                        </Border>
                        <!--<ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HighlightColor}"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform CenterX="30" CenterY="30" ScaleX=".9" ScaleY=".9" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>-->
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard Storyboard="{StaticResource ChangeButtonBackground}"/>
                </EventTrigger>                
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
        </Style>
        <!--#endregion-->


        <!--#region ListBox Styles-->
        <Style TargetType="ListBox" x:Key="ListBoxStyle">
            <Setter Property="BorderThickness" Value="0"/>
            <!--Horizontal-->
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Arial" />
                                   
            <!--Row-->
            <Setter Property="Foreground" Value="{StaticResource ValueFontColor}" /> 
            <Style.Triggers>
                <!--"{StaticResource DataGridSelectedColor}"-->
                <Trigger Property="ListBox.IsSelected" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>                    
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ListBox" x:Key="SupMsgBoxStyle">
            <Setter Property="BorderThickness" Value="0"/>
            <!--Horizontal-->
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="FontSize" Value="20"/>
